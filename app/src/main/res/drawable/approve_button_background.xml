<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF424242"
                android:endColor="#FF303030"
                android:angle="90" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#FF212121" />
        </shape>
    </item>
    
    <!-- Enabled state -->
    <item android:state_enabled="true">
        <ripple android:color="#4000E676">
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#FF4CAF50"
                        android:endColor="#FF388E3C"
                        android:angle="90" />
                    <corners android:radius="8dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#FF2E7D32" />
                </shape>
            </item>
        </ripple>
    </item>
    
</selector>
