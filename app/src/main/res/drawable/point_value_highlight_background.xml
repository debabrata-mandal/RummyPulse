<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Subtle gradient background -->
    <gradient
        android:angle="135"
        android:startColor="#1A2196F3"
        android:centerColor="#0D2196F3"
        android:endColor="#1A1976D2"
        android:type="linear" />
    
    <!-- Rounded corners -->
    <corners android:radius="8dp" />
    
    <!-- Subtle border -->
    <stroke
        android:width="1dp"
        android:color="#402196F3" />
    
</shape>
