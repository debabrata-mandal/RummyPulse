<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Orange gradient background for GST -->
    <gradient
        android:angle="135"
        android:startColor="#1AFF9800"
        android:centerColor="#0DFF9800"
        android:endColor="#1AF57C00"
        android:type="linear" />
    
    <!-- Rounded corners -->
    <corners android:radius="8dp" />
    
    <!-- Subtle border -->
    <stroke
        android:width="1dp"
        android:color="#40FF9800" />
    
</shape>
