<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Purple gradient background for Players -->
    <gradient
        android:angle="135"
        android:startColor="#1A9C27B0"
        android:centerColor="#0D9C27B0"
        android:endColor="#1A7B1FA2"
        android:type="linear" />
    
    <!-- Rounded corners -->
    <corners android:radius="8dp" />
    
    <!-- Subtle border -->
    <stroke
        android:width="1dp"
        android:color="#409C27B0" />
    
</shape>
