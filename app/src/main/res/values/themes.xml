<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Financial App Theme -->
    <style name="Theme.RummyPulse" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorPrimaryVariant">@color/accent_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_blue_light</item>
        <item name="colorSecondaryVariant">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_blue_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/primary_blue_dark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RummyPulse.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RummyPulse.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RummyPulse.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <!-- Navigation Drawer Styles -->
    <style name="NavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@color/navigation_background</item>
        <item name="itemTextColor">@color/text_primary</item>
        <item name="itemIconTint">@color/text_primary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <!-- Financial App Table Styles -->
    <style name="TableHeaderText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TableRowText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TableRowTextSecondary">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Financial Status Text Styles -->
    <style name="ProfitText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/profit_green</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="LossText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/loss_red</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="NeutralText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/neutral_gray</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="StatusIndicator">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/status_indicator_online</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <style name="CardViewStyleElevated">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/card_background_elevated</item>
    </style>

    <style name="AppTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:shadowColor">@color/shadow_color</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <!-- Search Bar Styles -->
    <style name="SearchBarStyle">
        <item name="android:background">@color/search_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/search_hint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- Bottom Navigation Styles -->
    <style name="BottomNavigationStyle">
        <item name="android:background">@color/bottom_nav_background</item>
        <item name="itemTextColor">@color/bottom_nav_unselected</item>
        <item name="itemIconTint">@color/bottom_nav_unselected</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <!-- Market Overview Styles -->
    <style name="MarketOverviewTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MarketOverviewValue">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Dark Dialog Theme -->
    <style name="DarkDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <!-- Dark Popup Menu Theme -->
    <style name="DarkPopupMenuStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@color/card_background_elevated</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Dark Alert Dialog Theme -->
    <style name="DarkAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:colorBackground">@color/card_background</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="android:windowBackground">@color/card_background</item>
    </style>
</resources>