<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/professional_row_background"
        android:padding="16dp">

        <!-- Month Year + Point Value Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Month Year -->
            <TextView
                android:id="@+id/text_month_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="September 2024"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary" />

            <!-- Point Value -->
            <TextView
                android:id="@+id/text_point_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹0.15"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/accent_blue"
                android:layout_marginEnd="12dp"
                android:background="@drawable/point_value_subtle_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:shadowColor="@color/accent_blue"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8" />

            <!-- Total Games -->
            <TextView
                android:id="@+id/text_total_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Games"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:background="@drawable/rounded_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- Statistics Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Left Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <!-- Total Contribution -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/professional_row_background"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’° Total Contribution"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_total_gst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹1,250"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/success_green"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Average Contribution per Game -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/professional_row_background"
                    android:padding="12dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Contribution/Game"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_avg_gst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹104.2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Right Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <!-- Total Players -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/professional_row_background"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¥ Total Players"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_total_players"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="48"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_blue"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Average Players per Game -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/professional_row_background"
                    android:padding="12dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯ Players/Game"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_avg_players"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
