<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/card_background_elevated">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Game Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_game_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game #12345"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/icon_qr_code_dashboard"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_qr_code"
                    android:background="@drawable/icon_background"
                    android:padding="3dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Show QR Code" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_game_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Progress"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/status_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:minWidth="80dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Point Value - Featured Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/point_value_featured_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POINT VALUE"
                android:textSize="12sp"
                android:textColor="@color/accent_blue_light"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/text_point_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹10.00"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/accent_blue"
                android:shadowColor="@color/accent_blue"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="12" />

        </LinearLayout>

        <!-- Game Details - Players & GST -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:background="@drawable/info_section_background"
            android:padding="12dp">

            <!-- Players Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/icon_circle_background_blue"
                    android:gravity="center"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_person"
                        android:tint="@color/accent_blue" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PLAYERS"
                        android:textSize="9sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/text_players"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider_color"
                android:layout_marginVertical="4dp" />

            <!-- GST Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="12dp">

                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/icon_circle_background_green"
                    android:gravity="center"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_percent"
                        android:tint="@color/success_green" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONTRIBUTION"
                        android:textSize="9sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/text_gst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Created Time -->
        <TextView
            android:id="@+id/text_created_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Started 2 hours ago"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp" />

        <!-- Creator Section -->
        <LinearLayout
            android:id="@+id/creator_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image_creator_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person"
                android:contentDescription="Creator Profile Photo"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_creator_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Created by: John Doe"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:textStyle="italic"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
