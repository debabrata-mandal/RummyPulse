<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/card_background_elevated">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Game Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_game_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game #12345"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/icon_qr_code_dashboard"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_qr_code"
                    android:background="@drawable/icon_background"
                    android:padding="3dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Show QR Code" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_game_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Progress"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/status_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:minWidth="80dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Game Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Players Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Players"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_players"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 players"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <!-- Point Value -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Point Value"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_point_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹10.00"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <!-- GST -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GST"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_gst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Created Time -->
        <TextView
            android:id="@+id/text_created_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Started 2 hours ago"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp" />

        <!-- Creator Section -->
        <LinearLayout
            android:id="@+id/creator_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image_creator_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person"
                android:contentDescription="Creator Profile Photo"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_creator_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Created by: John Doe"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:textStyle="italic"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
