<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_background"
        android:theme="@style/Theme.RummyPulse.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/header_background"
            android:titleTextColor="@color/text_primary"
            app:popupTheme="@style/Theme.RummyPulse.PopupOverlay"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Game View">

            <!-- Game ID and QR Code in toolbar -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_game_id_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FNKV66TSI"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/icon_qr_code_header"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_qr_code"
                    android:background="@drawable/icon_background"
                    android:padding="3dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Show QR Code" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content Area -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Players Section -->
            <LinearLayout
                android:id="@+id/players_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <!-- Collapsible Section Header -->
                <LinearLayout
                    android:id="@+id/players_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_gamepad"
                                android:tint="#2196F3"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Players &amp; Scores"
                                android:textColor="@color/text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Players Information Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp"
                            app:cardBackgroundColor="@color/card_background_elevated">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <!-- Game Rules Section -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="12dp">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:layout_marginEnd="8dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Point Value"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="11sp" />

                                        <TextView
                                            android:id="@+id/text_players_point_value"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="â‚¹99 per point"
                                            android:textColor="@color/text_primary"
                                            android:textSize="14sp"
                                            android:textStyle="bold"
                                            android:layout_marginTop="2dp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:layout_marginEnd="8dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="GST Rate"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="11sp" />

                                        <TextView
                                            android:id="@+id/text_players_gst_rate"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="55%"
                                            android:textColor="#FF9800"
                                            android:textSize="14sp"
                                            android:textStyle="bold"
                                            android:layout_marginTop="2dp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Game PIN"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="11sp" />

                                        <TextView
                                            android:id="@+id/text_players_game_pin"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="â€¢â€¢â€¢â€¢â€¢â€¢"
                                            android:textColor="@color/accent_blue"
                                            android:textSize="14sp"
                                            android:textStyle="bold"
                                            android:layout_marginTop="2dp"
                                            android:clickable="true"
                                            android:focusable="true"
                                            android:background="?android:attr/selectableItemBackgroundBorderless"
                                            android:padding="4dp" />

                                    </LinearLayout>

                                </LinearLayout>

                                <!-- Game Progress & Player Count -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:layout_marginEnd="8dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Current Round"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="11sp" />

                                        <TextView
                                            android:id="@+id/text_players_current_round"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Round 2"
                                            android:textColor="#2196F3"
                                            android:textSize="14sp"
                                            android:textStyle="bold"
                                            android:layout_marginTop="2dp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Number of Players"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="11sp" />

                                        <TextView
                                            android:id="@+id/text_number_of_players"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="4 Players"
                                            android:textColor="#4CAF50"
                                            android:textSize="14sp"
                                            android:textStyle="bold"
                                            android:layout_marginTop="2dp" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Collapse/Expand Icon -->
                    <ImageView
                        android:id="@+id/players_collapse_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_less"
                        android:tint="@color/text_secondary" />

                </LinearLayout>

                <!-- Collapsible Players Content -->
                <LinearLayout
                    android:id="@+id/players_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!-- Players Container -->
                    <LinearLayout
                        android:id="@+id/players_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Player cards will be dynamically generated here -->

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Standings Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/standings_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Collapsible Standings Header -->
                    <LinearLayout
                        android:id="@+id/standings_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_bar_chart"
                                    android:tint="#2196F3"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Standings"
                                    android:textColor="@color/text_primary"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <!-- Network Status Indicator -->
                                <LinearLayout
                                    android:id="@+id/network_status_indicator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginStart="12dp"
                                    android:background="@drawable/status_badge_background"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:paddingTop="4dp"
                                    android:paddingBottom="4dp">

                                    <View
                                        android:id="@+id/status_dot"
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:background="@drawable/status_dot"
                                        android:layout_marginEnd="4dp" />

                                    <TextView
                                        android:id="@+id/status_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Live"
                                        android:textColor="#4CAF50"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Game Information Card -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="3dp"
                                app:cardBackgroundColor="@color/card_background_elevated">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <!-- Game Rules Section -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginBottom="12dp">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical"
                                            android:layout_marginEnd="8dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Point Value"
                                                android:textColor="@color/text_secondary"
                                                android:textSize="11sp" />

                                            <TextView
                                                android:id="@+id/text_point_value_info"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="â‚¹99 per point"
                                                android:textColor="@color/text_primary"
                                                android:textSize="14sp"
                                                android:textStyle="bold"
                                                android:layout_marginTop="2dp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="GST Rate"
                                                android:textColor="@color/text_secondary"
                                                android:textSize="11sp" />

                                            <TextView
                                                android:id="@+id/text_gst_rate_info"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="55%"
                                                android:textColor="#FF9800"
                                                android:textSize="14sp"
                                                android:textStyle="bold"
                                                android:layout_marginTop="2dp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <!-- Game Progress & Financial Summary -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical"
                                            android:layout_marginEnd="8dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Current Round"
                                                android:textColor="@color/text_secondary"
                                                android:textSize="11sp" />

                                            <TextView
                                                android:id="@+id/text_current_round_info"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Round 2"
                                                android:textColor="#2196F3"
                                                android:textSize="14sp"
                                                android:textStyle="bold"
                                                android:layout_marginTop="2dp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Total GST"
                                                android:textColor="@color/text_secondary"
                                                android:textSize="11sp" />

                                            <TextView
                                                android:id="@+id/text_total_gst_info"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="â‚¹6,861"
                                                android:textColor="#F44336"
                                                android:textSize="14sp"
                                                android:textStyle="bold"
                                                android:layout_marginTop="2dp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <!-- Collapse/Expand Icon -->
                        <ImageView
                            android:id="@+id/standings_collapse_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_less"
                            android:tint="@color/text_secondary" />

                    </LinearLayout>

                    <!-- Collapsible Standings Content -->
                    <LinearLayout
                        android:id="@+id/standings_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <!-- Standings table container (no horizontal scroll needed) -->
                        <LinearLayout
                            android:id="@+id/standings_table_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Standings table will be dynamically generated here -->

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Admin Mode Indicator -->
            <androidx.cardview.widget.CardView
                android:id="@+id/admin_mode_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background_elevated">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_shield"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/text_admin_mode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Admin Mode"
                        android:textColor="#4CAF50"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btn_close"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_close"
                        android:tint="#FF5722"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Settlement Rules Content (Always Visible) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ How Settlement Works:"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- Winners Rule -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€¢ "
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/text_settlement_winners_rule"
                            android:text="Winners (Green): Receive money but pay 55% on winnings"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Losers Rule -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€¢ "
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Losers (Red): Pay money, no GST required"
                            android:textColor="#F44336"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Formula -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€¢ "
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/text_settlement_formula"
                            android:text="Formula: (Total All Scores - Your Score Ã— 4) Ã— â‚¹99"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- GST Rule -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€¢ "
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/text_settlement_gst_rule"
                            android:text="GST: Only winners pay 55% on positive amounts"
                            android:textColor="#FF9800"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Net Amount -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€¢ "
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Net Amount: Gross Amount - GST (for winners) or just Gross Amount (for losers)"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Example -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#2C2C2C"
                        android:padding="12dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’¡ Example:"
                            android:textColor="@color/accent_blue"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_settlement_example_description"
                            android:text="If you score 25 points in a 4-player game with â‚¹99/point:"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_settlement_example_formula"
                            android:text="Your settlement = (Total of all 4 scores - 25 Ã— 4) Ã— â‚¹99"
                            android:textColor="@color/accent_blue"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Add Player Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_person"
        android:contentDescription="Add Player"
        app:backgroundTint="#2196F3"
        app:tint="@android:color/white" />

    <!-- Loading Spinner Overlay - Must be last to appear on top -->
    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp">

        <!-- Blur effect background -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blur_background_overlay" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/dialog_background"
            android:padding="32dp"
            android:elevation="12dp">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateTint="@color/accent_blue"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading game data..."
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>