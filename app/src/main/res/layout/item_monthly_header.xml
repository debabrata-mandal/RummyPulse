<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/professional_row_background"
    android:padding="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    android:layout_marginHorizontal="8dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/text_month_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="September 2024"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_monthly_games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Games"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/text_monthly_gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹1,250"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/success_green" />

    </LinearLayout>

</LinearLayout>
