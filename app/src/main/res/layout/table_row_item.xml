<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@drawable/ripple_effect"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row - Game ID, PIN, Status, Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Game ID -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GAME ID"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <TextView
                    android:id="@+id/text_game_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GAME001"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Game PIN -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PIN"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/text_game_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="****"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_orange"
                        android:layout_marginEnd="6dp" />

                    <ImageView
                        android:id="@+id/icon_view_pin"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_visibility"
                        android:background="@drawable/icon_background"
                        android:padding="3dp"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

            </LinearLayout>

            <!-- Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STATUS"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp">

                    <View
                        android:id="@+id/status_indicator"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/status_indicator_online"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/text_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active"
                        android:textSize="14sp"
                        android:textColor="@color/status_online"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Creation Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CREATED"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <TextView
                    android:id="@+id/text_creation_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Jan 2024, 14:30"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Metrics Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Total Score -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL SCORE"
                    android:textSize="9sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <TextView
                    android:id="@+id/text_total_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2,450"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_orange"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Point Value -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POINT VALUE"
                    android:textSize="9sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <TextView
                    android:id="@+id/text_point_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹25"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Players -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLAYERS"
                    android:textSize="9sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <TextView
                    android:id="@+id/text_players"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- GST -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GST"
                    android:textSize="9sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/text_gst_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18%"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/status_offline"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/text_gst_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹441"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_orange" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/action_buttons_background">

            <!-- Approve GST Button -->
            <ImageButton
                android:id="@+id/btn_approve_gst"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:src="@drawable/ic_approve"
                android:background="@drawable/approve_button_background"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:contentDescription="Approve GST" />

            <!-- Not Applicable Button -->
            <ImageButton
                android:id="@+id/btn_not_applicable"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:src="@drawable/ic_not_applicable"
                android:background="@drawable/not_applicable_button_background"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:contentDescription="Not Applicable" />

            <!-- Delete Game Button -->
            <ImageButton
                android:id="@+id/btn_delete_game"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:src="@drawable/ic_delete"
                android:background="@drawable/delete_button_background"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:contentDescription="Delete Game" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
