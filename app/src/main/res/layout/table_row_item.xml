<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/ripple_effect"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/card_background">

    <!-- Row Border for Better Identification -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/row_border"
        android:layout_margin="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Game ID Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="4dp"
                android:layout_height="24dp"
                android:background="@color/primary_blue"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/text_game_id_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GAME001"
                android:textSize="16sp"
                android:textColor="@color/primary_blue"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/divider_color"
                android:layout_marginHorizontal="12dp" />

        </LinearLayout>

        <!-- Professional Information Rows -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- First Row: Game Created Info and PIN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/professional_row_background"
                android:layout_marginBottom="8dp">

                <!-- Game Created Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Game "
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_game_id_in_created"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GAME001"
                            android:textSize="14sp"
                            android:textColor="@color/primary_blue"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" created on"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_creation_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15 Jan 2024 at 14:30"
                        android:textSize="13sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="normal"
                        android:layout_marginTop="2dp"
                        android:maxLines="2"
                        android:ellipsize="end" />

                </LinearLayout>

                <!-- Game PIN Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Game PIN:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/text_game_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="****"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_orange"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:id="@+id/icon_view_pin"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_visibility"
                        android:background="@drawable/icon_background"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

            </LinearLayout>

            <!-- Third Row: Point Value and Players -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/professional_row_background"
                android:layout_marginBottom="8dp">

                <!-- Point Value Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Point Value:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/text_point_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹25"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

                <!-- Players Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Players:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/text_players"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

            </LinearLayout>

            <!-- Fourth Row: GST Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/professional_row_background">

                <!-- GST % Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GST %:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/text_gst_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/status_offline"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

                <!-- GST Amount Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GST Amount:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/text_gst_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹441"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_orange"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginVertical="8dp" />

        <!-- Action Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/action_buttons_background">

            <!-- Approve GST Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/approve_button_background"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/btn_approve_gst">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_approve"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APPROVE"
                    android:textSize="9sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

            </LinearLayout>

            <!-- Not Applicable Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/not_applicable_button_background"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/btn_not_applicable">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_not_applicable"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="9sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

            </LinearLayout>

            <!-- Delete Game Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/delete_button_background"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/btn_delete_game">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delete"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DELETE"
                    android:textSize="9sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>