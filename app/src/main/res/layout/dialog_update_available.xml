<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:padding="24dp">

    <!-- Close Button - Outside, Top Right -->
    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="-8dp"
        android:background="@drawable/dialog_background"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:tint="#F44336"
        android:padding="6dp"
        android:contentDescription="Close"
        android:elevation="4dp" />

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/professional_row_background"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🚀"
                android:textSize="48sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Available"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A new version is ready to install!"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="center" />

        </LinearLayout>

    <!-- Version Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/professional_row_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📱 Current Version"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_current_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0.0"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="✨ Latest Version"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_latest_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0.1"
                android:textColor="@color/accent_blue"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Release Notes Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/example_background"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 What's New:"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="150dp">

            <TextView
                android:id="@+id/text_release_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Bug fixes and improvements"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:lineSpacingExtra="4dp" />

        </ScrollView>

    </LinearLayout>

        <!-- Update Button - Full Width -->
        <Button
            android:id="@+id/btn_update_now"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Update Now"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/approve_button_background"
            android:backgroundTint="@color/accent_blue"
            android:drawableStart="@android:drawable/stat_sys_download"
            android:drawableTint="@android:color/white"
            android:drawablePadding="8dp"
            android:gravity="center" />

    </LinearLayout>

</RelativeLayout>

