<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#2C2C2C">

    <!-- Left Composite Column: Rank + Player + Score -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#2C2C2C"
        android:padding="12dp">

        <!-- Rank -->
        <TextView
            android:id="@+id/text_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¥‡"
            android:textSize="18sp"
            android:layout_marginEnd="8dp" />

        <!-- Player Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_player_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raja"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_player_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(#21)"
                    android:textColor="#6c757d"
                    android:textSize="11sp"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 0"
                android:textColor="#FFC107"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Right Composite Column: Gross + GST + Net -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#2C2C2C"
        android:padding="12dp"
        android:layout_marginStart="1dp">

        <TextView
            android:id="@+id/text_gross_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹0"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GST: â‚¹0"
            android:textColor="#FF5722"
            android:textSize="10sp"
            android:layout_marginTop="1dp" />

        <TextView
            android:id="@+id/text_net_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net: â‚¹0"
            android:textColor="#4CAF50"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginTop="1dp" />

    </LinearLayout>

</LinearLayout>
