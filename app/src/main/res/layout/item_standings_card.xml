<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Top Row: Player Info + Net Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Rank Badge -->
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/rank_badge_background"
                android:gravity="center"
                android:layout_marginEnd="6dp">

                <TextView
                    android:id="@+id/text_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥‡"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Player Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_player_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ajay"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/text_player_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(#75)"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score: "
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="158"
                    android:textColor="#FFC107"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Net Amount -->
            <TextView
                android:id="@+id/text_net_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹515"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="end"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Bottom Row: 10 Round Score Boxes -->
        <LinearLayout
            android:id="@+id/round_scores_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Round 1 -->
            <TextView
                android:id="@+id/round_1_score"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="15"
                android:textSize="8sp"
                android:textColor="@color/text_primary"
                android:background="@drawable/round_score_box"
                android:gravity="center"
                android:layout_marginEnd="1dp"
                android:maxLines="1" />

            <!-- Round 2 -->
            <TextView
                android:id="@+id/round_2_score"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="23"
                android:textSize="8sp"
                android:textColor="@color/text_primary"
                android:background="@drawable/round_score_box"
                android:gravity="center"
                android:layout_marginEnd="1dp"
                android:maxLines="1" />

            <!-- Round 3 -->
            <TextView
                android:id="@+id/round_3_score"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="8sp"
                android:textColor="@color/text_primary"
                android:background="@drawable/round_score_box"
                android:gravity="center"
                android:layout_marginEnd="1dp"
                android:maxLines="1" />

            <!-- Round 4 -->
            <TextView
                android:id="@+id/round_4_score"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="12"
                android:textSize="8sp"
                android:textColor="@color/text_primary"
                android:background="@drawable/round_score_box"
                android:gravity="center"
                android:layout_marginEnd="1dp"
                android:maxLines="1" />

            <!-- Round 5 -->
            <TextView
                android:id="@+id/round_5_score"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="31"
                android:textSize="8sp"
                android:textColor="@color/text_primary"
                android:background="@drawable/round_score_box"
                android:gravity="center"
                android:layout_marginEnd="1dp"
                android:maxLines="1" />

            <!-- Round 6 -->
            <TextView
                android:id="@+id/round_6_score"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="19"
                android:textSize="8sp"
                android:textColor="@color/text_primary"
                android:background="@drawable/round_score_box"
                android:gravity="center"
                android:layout_marginEnd="1dp"
                android:maxLines="1" />

            <!-- Round 7 -->
            <TextView
                android:id="@+id/round_7_score"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="27"
                android:textSize="8sp"
                android:textColor="@color/text_primary"
                android:background="@drawable/round_score_box"
                android:gravity="center"
                android:layout_marginEnd="1dp"
                android:maxLines="1" />

            <!-- Round 8 -->
            <TextView
                android:id="@+id/round_8_score"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="14"
                android:textSize="8sp"
                android:textColor="@color/text_primary"
                android:background="@drawable/round_score_box"
                android:gravity="center"
                android:layout_marginEnd="1dp"
                android:maxLines="1" />

            <!-- Round 9 -->
            <TextView
                android:id="@+id/round_9_score"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="8sp"
                android:textColor="@color/text_primary"
                android:background="@drawable/round_score_box"
                android:gravity="center"
                android:layout_marginEnd="1dp"
                android:maxLines="1" />

            <!-- Round 10 -->
            <TextView
                android:id="@+id/round_10_score"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="8sp"
                android:textColor="@color/text_primary"
                android:background="@drawable/round_score_box"
                android:gravity="center"
                android:maxLines="1" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
